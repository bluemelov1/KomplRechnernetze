{
  "interfaces": {
    "bonding": {
      "$0": {
        "hash-policy": {
          "networking": {
            "bonds": {
              "$0": {
                "driverOptions": {
                  "xmit_hash_policy": {
                    "vyosValue": "$1",
                    "nixosPath": "networking.bonds.$0.driverOptions.xmit_hash_policy=\"$1\";"
                  }
                }
              }
            }
          }
        },
        "member": {
          "interface": {
            "networking": {
              "bonds": {
                "$0": {
                  "interfaces": {
                    "vyosValue": "$1",
                    "nixosPath": "networking.bonds.$0.interfaces=$1;"
                  }
                }
              }
            }
          }
        },
        "mode": {
          "networking": {
            "bonds": {
              "$0": {
                "driverOptions": {
                  "mode": {
                    "vyosValue": "$1",
                    "nixosPath": "networking.bonds.$0.driverOptions.mode=\"$1\";"
                  }
                }
              }
            }
          }
        },
        "primary": {
          "networking": {
            "bonds": {
              "$0": {
                "driverOptions": {
                  "primary": {
                    "vyosValue": "$1",
                    "nixosPath": "networking.bonds.$0.driverOptions.primary=\"$1\";"
                  }
                }
              }
            }
          }
        },
        "arp-monitor": {
          "interval": {
            "networking": {
              "bonds": {
                "$0": {
                  "driverOptions": {
                    "arp_interval": {
                      "vyosValue": "$1",
                      "nixosPath": "networking.bonds.$0.driverOptions.arp_interval=\"$1\";"
                    }
                  }
                }
              }
            }
          },
          "target": {
            "networking": {
              "bonds": {
                "$0": {
                  "driverOptions": {
                    "apr_ip_target": {
                      "vyosValue": "$1",
                      "nixosPath": "networking.bonds.$0.driverOptions.apr_ip_target=\"$1\";"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "ethernet": {
      "$0": {
        "address": {
          "networking": {
            "interfaces": {
              "$0": {
                "useDHCP": {
                  "vyosValue": "^dhcp$",
                  "nixosPath": "networking.interfaces.$0.useDHCP=true;"
                }
              }
            }
          }
        }
      }
    },
    "wireguard": {
      "$0": {
        "peer": {
          "client": {
            "address": {
              "networking": {
                "wireguard": {
                  "interfaces": {
                    "$0": {
                      "peers": {
                        "endpoint": {
                          "vyosValue": "$1;interfaces#wireguard#$2#port",
                          "nixosPath": "networking.wireguard.interfaces.$0.peers.endpoint=$1:$3;"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}